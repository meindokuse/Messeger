<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.auth.RegFragment"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/titleTextReg"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="Создайте новый аккаунт!"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstNameReg"
        android:layout_width="167dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:hint="Имя"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/ageReg"
        android:layout_width="167dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Возраст"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/firstNameReg"
        app:layout_constraintStart_toStartOf="@+id/firstNameReg"
        app:layout_constraintTop_toBottomOf="@+id/firstNameReg" />

    <EditText
        android:id="@+id/seondNameReg"
        android:layout_width="167dp"
        android:layout_height="45dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Фамилия"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/cityReg"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Город*"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/seondNameReg"
        app:layout_constraintStart_toStartOf="@+id/seondNameReg"
        app:layout_constraintTop_toBottomOf="@+id/seondNameReg" />

    <EditText
        android:id="@+id/schoolReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Учеба*"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/cityReg"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/ageReg"
        app:layout_constraintTop_toBottomOf="@+id/ageReg" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/schoolReg"
        app:layout_constraintStart_toStartOf="@+id/schoolReg"
        app:layout_constraintTop_toBottomOf="@+id/schoolReg" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="36dp"
        android:gravity="center|end"
        android:text="Уже есть аккаунт?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DoneReg" />

    <TextView
        android:id="@+id/goToLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:text="Войти"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/DoneReg" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="131dp"
        android:layout_height="106dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bigstar"
        app:layout_constraintEnd_toEndOf="@+id/titleTextReg"
        app:layout_constraintStart_toStartOf="@+id/titleTextReg"
        app:layout_constraintTop_toBottomOf="@+id/titleTextReg" />

    <Button
        android:id="@+id/DoneReg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Зарегистроваться!"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/password" />

</androidx.constraintlayout.widget.ConstraintLayout>