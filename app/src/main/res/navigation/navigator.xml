<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigator"
    app:startDestination="@id/loginOrRegFragment">

    <fragment
        android:id="@+id/listOfChatsFragment"
        android:name="com.example.myapplication.ui.chats.SimpleChatsFragment"
        android:label="list_of_chats"
        tools:layout="@layout/list_of_chats" >
        <action
            android:id="@+id/action_listOfChatsFragment_to_chat"
            app:destination="@id/chat" />
    </fragment>
    <fragment
        android:id="@+id/chat"
        android:name="com.example.myapplication.ui.messages.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chat_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myapplication.ui.profile.ProfileFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/loginOrRegFragment"
        android:name="com.example.myapplication.ui.profile.auth.RegFragment"
        android:label="fragment_login_or_reg"
        tools:layout="@layout/fragment_login_or_reg" >
        <action
            android:id="@+id/action_loginOrRegFragment_to_profileFragment"
            app:popUpTo="@+id/loginOrRegFragment"
            app:popUpToInclusive="true"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_loginOrRegFragment_to_loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_left"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myapplication.ui.profile.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>